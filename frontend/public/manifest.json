{
  "manifest_version": 3,
  "name": "Trust Issues",
  "version": "1.0.0",
  "description": "Investigate the authenticity and credibility of web content",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Trust Issues - Analyze this page"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "src/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}